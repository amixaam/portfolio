---
import Layout from "@/layouts/Layout.astro";

import Github from "@assets/icons/github.svg";
import LinkedIn from "@assets/icons/linkedin.svg";
import Mail from "@assets/icons/mail.svg";
import Instagram from "@assets/icons/instagram.svg";
import ContactLink from "@/components/ContactLink.astro";

const count = 7;

const links = {
	mail: "mailto:robertobrinko@gmail.com",
	linkedin: "https://www.linkedin.com/in/robertsbrinkis/",
	github: "https://github.com/brinkis",
	instagram: "https://instagram.com/robisnis",
};

const canonicalURL = "https://brinkis.net/contact";
---

<Layout title="Contacts" canonicalURL={canonicalURL}>
	<div class="mx-auto w-full max-w-[1100px] flex flex-col gap-16 md:gap-24">
		<section
			class="float-vertical overflow-clip relative w-full flex flex-col space-y-[-2rem] md:space-y-[-5.5rem] justify-center"
		>
			{
				Array.from({ length: count }).map((_, i) => (
					<p
						class="text-nowrap font-extrabold text-4xl md:text-8xl leading-none select-none text-center uppercase"
						style={{
							opacity: 1 - Math.pow(i / count, 0.5),
						}}
					>
						get in touch
					</p>
				))
			}
		</section>

		<section class="grid gap-8 md:grid-cols-2">
			<article class="blog-styles space-y-4">
				<h3>Open for collaborations</h3>
				<p>
					If you are building a product and need focused design + engineering execution,
					I&apos;m happy to help.
				</p>
				<p>
					Best way to reach me is email:
					<a
						href={links.mail}
						class="underline md:no-underline hover:underline text-link-light"
					>
						robertobrinko@gmail.com
					</a>
				</p>
			</article>
			<article class="blog-styles space-y-4">
				<h3>Where to find me</h3>
				<p>
					You can also connect through LinkedIn, follow side projects on GitHub,
					or reach out on Instagram.
				</p>
				<p>
					I usually reply quickly for project inquiries and collaboration requests.
				</p>
			</article>
		</section>

		<section
			class="flex flex-row items-center justify-center gap-8 *:flex-shrink-0
	*:flex-grow-0 *:flex-nowrap lg:gap-32"
		>
			<div class="flex flex-row gap-6">
				<ContactLink href={links.mail}>
					<Mail title="Mail" class="group-hover:scale-[0.85] group-hover:fill-secondary-light transition-all fill-secondary-dark dark:fill-secondary-light  dark:group-hover:fill-secondary-dark  size-12" />
				</ContactLink>
				<ContactLink href={links.linkedin}>
					<LinkedIn title="LinkedIn" class="group-hover:scale-[0.85] group-hover:fill-secondary-light transition-all fill-secondary-dark dark:fill-secondary-light  dark:group-hover:fill-secondary-dark  size-8" />
				</ContactLink>
				<ContactLink href={links.github}>
					<Github title="GitHub" class="group-hover:scale-[0.85] group-hover:fill-secondary-light transition-all fill-secondary-dark dark:fill-secondary-light  dark:group-hover:fill-secondary-dark  size-10" />
				</ContactLink>
				<ContactLink href={links.instagram}>
					<Instagram title="Instagram" class="group-hover:scale-[0.85] group-hover:fill-secondary-light transition-all fill-secondary-dark dark:fill-secondary-light  dark:group-hover:fill-secondary-dark  size-10" />
				</ContactLink>
			</div>
		</section>
	</div>
</Layout>
