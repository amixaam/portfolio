{
	"extends": "astro/tsconfigs/strict",
	"include": [".astro/types.d.ts", "**/*"],
	"exclude": ["dist"],
	"compilerOptions": {
		"jsx": "react-jsx",
		"jsxImportSource": "react",

		"baseUrl": ".",
		"paths": {
			"@/*": ["./src/*"],
			"@assets/*": ["src/assets/*"],
			"@components/*": ["src/components/*"],
			"@markdown/*": ["src/assets/markdown/*"],
			"@utils/*": ["src/utils/*"],
			"@icons/*": ["src/assets/icons/*"],
			"@promos/*": ["src/assets/promos/*"]
		}
	}
}
